<?xml version="1.0" encoding="UTF-8"?>

 <?import java.lang.*?>
<?import javafx.geometry.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="contentPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="juniter.gui.Network">
     <right>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <fx:include fx:id="menu" source="include/Menu.fxml" />
            </children>
        </VBox>
    </right>
    <bottom>
        <fx:include source="include/Footer.fxml" />
    </bottom>

    <center>
        <ScrollPane fitToWidth="true" prefWidth="1050.0" BorderPane.alignment="CENTER">
            <content>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#peerCheck" text="peerCheck" />
                                <Button mnemonicParsing="false" onAction="#pairing" text="Pairing" />
                                <Button mnemonicParsing="false" onAction="#ping" text="200 pings" />
                                <ComboBox fx:id="period" editable="true" prefHeight="25.0" prefWidth="184.0" promptText="%net.statPeriod" HBox.hgrow="ALWAYS" />

                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>
                                <PieChart fx:id="netstats" legendSide="LEFT" title="%net.nextProbability" HBox.hgrow="ALWAYS" />

                            </children>
                        </HBox>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>
                                <StackedAreaChart fx:id="pow" createSymbols="false" legendVisible="false" title="%net.pow" HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <NumberAxis fx:id="powX" autoRanging="false" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="powY" autoRanging="false" side="LEFT" />
                                    </yAxis>
                                </StackedAreaChart>
                                <LineChart fx:id="issuersFrameVar" createSymbols="false" legendVisible="false" title="%net.issuersFrameVar" HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <NumberAxis fx:id="issuersFrameVarX" autoRanging="false" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="issuersFrameVarY" side="LEFT" />
                                    </yAxis>
                                </LineChart>
                            </children>
                        </HBox>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>
                                <LineChart fx:id="medianTime" createSymbols="false" legendVisible="false" title="%net.medianTime" HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <NumberAxis fx:id="medianX" autoRanging="false" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="medianY" side="LEFT" />
                                    </yAxis>
                                </LineChart>
                                <LineChart fx:id="issuersFrame" createSymbols="false" legendVisible="false" title="%net.issuersFrame" HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <NumberAxis fx:id="issuersFrameX" autoRanging="false" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="issuersFrameY" side="LEFT" />
                                    </yAxis>
                                </LineChart>
                            </children>
                        </HBox>
                        <HBox spacing="15.0">
                            <children>
                                <TextField fx:id="delSome" prefHeight="25.0" prefWidth="370.0" promptText="ex .. 15144,31202,85448,87566,90830,109327" />
                                <CheckBox fx:id="delLowerThan" mnemonicParsing="false" text="lower than" />
                                <CheckBox fx:id="delHigherThan" mnemonicParsing="false" text="higher Than" />
                                <Button mnemonicParsing="false" onAction="#deleteSome" text="delete ! " />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                        <HBox spacing="15.0">
                            <children>
                                <TextField fx:id="tstSome" prefHeight="25.0" prefWidth="370.0" promptText="ex .. 15144,31202,85448,87566,90830,109327" />
                                <CheckBox fx:id="testLowerThan" mnemonicParsing="false" text="lower than" />
                                <CheckBox fx:id="testHigherThan" mnemonicParsing="false" text="higher Than" />
                                <Button mnemonicParsing="false" onAction="#testSome" text="is / are valid ? " />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
