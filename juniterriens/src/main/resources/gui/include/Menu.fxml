<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8" styleClass="pane" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="juniter.gui.include.Menu">
    <children>
        <VBox fx:id="vMenu" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Region VBox.vgrow="ALWAYS"/>
                <Hyperlink onAction="#viewMain">
                    <graphic>
                        <ImageView fx:id="logoMain" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/whiterabbit.jpg"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.tooltip.front"/>
                    </tooltip>
                </Hyperlink>
                <Hyperlink onAction="#viewSVGGraph">
                    <graphic>
                        <ImageView fx:id="logoGraphs" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/logo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.tooltip.graph"/>
                    </tooltip>
                </Hyperlink>
                <Hyperlink onAction="#viewNotary">
                    <graphic>
                        <ImageView fx:id="logoNotary" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/logo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.tooltip.notary"/>
                    </tooltip>
                </Hyperlink>
                <Hyperlink onAction="#viewNetwork">
                    <graphic>
                        <ImageView fx:id="logoNetwork" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/logo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.tooltip.network"/>
                    </tooltip>
                </Hyperlink>
                <Hyperlink onAction="#viewDatabase">
                    <graphic>
                        <ImageView fx:id="logoDatabase" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/logo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.tooltip.database"/>
                    </tooltip>
                </Hyperlink>
                <Hyperlink onAction="#viewSpark">
                    <graphic>
                        <ImageView fx:id="logoSpark" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/logo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.tooltip.spark"/>
                    </tooltip>
                </Hyperlink>

                <Region VBox.vgrow="ALWAYS"/>
                <ComboBox fx:id="LANG_COMBO" focusTraversable="false" VBox.vgrow="ALWAYS"/>
                <ComboBox fx:id="THEME_COMBO" focusTraversable="false" VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
