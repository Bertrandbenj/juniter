                </VBox>
                <FlowPane fx:id="peersList" hgap="10.0" prefHeight="200.0" prefWidth="200.0" vgap="10.0">
                    <children>

                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </FlowPane>
                <TextArea prefHeight="200.0" prefWidth="200.0" promptText="IMage of the network ? " VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
