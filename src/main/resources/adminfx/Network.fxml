                              </children>
                          </HBox>
                          <HBox spacing="15.0">
                              <children>
                                  <TextField fx:id="delSome" prefHeight="25.0" prefWidth="370.0" promptText="ex .. 15144,31202,85448,87566,90830,109327" />
