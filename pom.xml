<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Package info -->
	<groupId>org.duniter</groupId>
	<artifactId>juniter</artifactId>
	<version>0.1</version>
	<packaging>jar</packaging>

	<name>Juniter</name>
	<description>Java implementation of duniter </description>
	<url>https://github.com/Bertrandbenj/juniter</url>

	<scm>
		<connection>scm:git:git@github.com:Bertrandbenj/juniter.git</connection>
		<developerConnection>scm:git:git@github.com:Bertrandbenj/juniter.git</developerConnection>
		<url>https://github.com/Bertrandbenj/juniter</url>
	</scm>

	<developers>
		<developer>
			<id>BnimajneB</id>
			<name>Bertrand Benjamin</name>
			<url>https://github.com/Bertrandbenj</url>
			<email>bertrandbenj@gmail.com</email>
			<roles>
				<role>Software Developer</role>
			</roles>
		</developer>
	</developers>


	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.0.2.RELEASE</version>
		<relativePath />
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>10</java.version>
		<jdk.version>10</jdk.version>
		<!-- spring.version>5.0.6.RELEASE</spring.version> -->
		<!-- <maven.compiler.source>1.10</maven.compiler.source> -->
		<!-- <maven.compiler.target>1.10</maven.compiler.target> -->
		<duniter4j.version>1.0.3-SNAPSHOT</duniter4j.version>
		<thymeleaf.version>3.0.2.RELEASE</thymeleaf.version>
		<thymeleaf-layout-dialect.version>2.1.1</thymeleaf-layout-dialect.version>
	</properties>





	<dependencies>

		<!-- ======================= Crypto Dependencies ========================== -->
		<dependency>
			<groupId>org.abstractj.kalium</groupId>
			<artifactId>kalium</artifactId>
			<!-- <version>0.8.0</version> -->
			<version>kalium-0.5.0_blavenie</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/kalium-0.5.0_blavenie.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.github.jnr</groupId>
			<artifactId>jnr-ffi</artifactId>
			<version>2.1.0</version>
		</dependency>
		<dependency>
			<groupId>com.lambdaworks</groupId>
			<artifactId>scrypt</artifactId>
			<version>1.4.0</version>
		</dependency>



		<!-- ======================= Spring-Boot dependencies ========================== -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-configuration-processor</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-freemarker</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
		</dependency>
