			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<scope>test</scope>
		</dependency>



		<!-- ======================= FRONT Dependencies ========================== -->
		<dependency>
			<groupId>de.neuland-bfi</groupId>
